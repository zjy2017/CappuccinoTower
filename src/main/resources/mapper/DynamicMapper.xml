	</sql>

	<sql id="Base_Column_List">
		dynamic_id,
		d_time,
		p_id,
		action,
		u_id,
		be_operated,
		be_table
	</sql>
	<!-- 统计符合自定义条件的数据个数 -->
	<select id="countByExample" parameterType="com.pojo.DynamicExample"
		resultType="java.lang.Integer">
		select count(*) from dynamic
		<!-- _parameter代表的时传入参数 -->
		<!-- 自定义条件 -->
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
	</select>

